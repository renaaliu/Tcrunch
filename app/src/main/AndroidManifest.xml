<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toniebalonie.tjiang11.tcrunch">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tcrunch_ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeacherTicketListActivity"
            android:label="Tickets"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateTicketActivity"
            android:label="Create a Ticket"
            android:parentActivityName=".TeacherTicketListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toniebalonie.tjiang11.tcrunch.TeacherTicketListActivity" />
        </activity>
        <activity
            android:name=".TeacherTicketDetailActivity"
            android:parentActivityName=".TeacherTicketListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toniebalonie.tjiang11.tcrunch.TeacherTicketListActivity" />
        </activity>
        <activity
            android:name=".StudentTicketListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SubmitResponseActivity"
            android:label="Submit Response"
            android:parentActivityName=".StudentTicketListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toniebalonie.tjiang11.tcrunch.StudentTicketListActivity" />
        </activity>
        <activity
            android:name=".models.AnsweredTicketActivity"
            android:label="Answered Ticket"
            android:parentActivityName=".StudentTicketListActivity"/>
        <activity android:name=".StudentIntroActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Student Intro" />
        <activity android:name=".TeacherIntroActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Teacher Intro" />
        <service
            android:name=".PollingService"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>
    </application>
</manifest>