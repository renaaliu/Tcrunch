<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tjiang11.tcrunch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeacherTicketListActivity"
            android:label="Tickets"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CreateTicketActivity"
            android:label="Create a Ticket"
            android:parentActivityName=".TeacherTicketListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TeacherTicketListActivity" />
        </activity>
        <activity android:name=".TeacherTicketDetailActivity"></activity>
    </application>

</manifest>