<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.example.tjiang11.tcrunch.CreateTicketActivity">

    <Spinner
        android:id="@+id/class_spinner"
        android:layout_width="300dp"
        android:layout_height="40dp"

        android:entries="@array/dummydata_spinner_options"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/class_icon"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/class_spinner"
        android:layout_toStartOf="@+id/class_spinner" />

    <TextView
        android:text="Set a date..."
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:padding="9dp"
        android:id="@+id/set_date"
        android:layout_below="@+id/class_spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_event_black_24dp"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/set_date"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignBottom="@+id/set_date"
        android:layout_toLeftOf="@+id/set_date"
        android:layout_toStartOf="@+id/set_date" />

    <TextView
        android:text="Set a time..."
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:padding="9dp"
        android:id="@+id/set_time"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/set_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_schedule_black_24dp"
        android:layout_alignTop="@+id/set_time"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:id="@+id/imageView4"
        android:layout_alignBottom="@+id/set_time"
        android:layout_toLeftOf="@+id/set_time"
        android:layout_toStartOf="@+id/set_time" />

    <SeekBar
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:id="@+id/seekBarLength"
        android:layout_below="@+id/set_time"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="Set length..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_length"
        android:layout_marginBottom="16dp"
        android:layout_alignBottom="@+id/seekBarLength"
        android:layout_toEndOf="@+id/seekBarLength"
        android:layout_toRightOf="@+id/seekBarLength" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_hourglass_full_black_24dp"
        android:id="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignBottom="@+id/seekBarLength"
        android:layout_toLeftOf="@+id/seekBarLength"
        android:layout_toStartOf="@+id/seekBarLength"
        android:layout_alignTop="@+id/seekBarLength" />

    <EditText
        android:id="@+id/ask_question"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="Ask a question..."

        android:layout_marginTop="22dp"
        android:layout_below="@+id/seekBarLength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"/>

</RelativeLayout>
