<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    tools:context="com.toniebalonie.tjiang11.tcrunch.fragments.TeacherLoginFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        
        <android.support.design.widget.TextInputEditText
            android:id="@+id/teacher_email_input_text"
            android:inputType="textEmailAddress"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:hint="@string/enter_email"
            android.support.design:hintEnabled="true"
            android:textAlignment="center"/>
        
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/teacher_password_input_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPassword"
            android:hint="@string/enter_password"
            android.support.design:hintEnabled="true"
            android:textAlignment="center"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/teacherLoginButton"
        android:layout_centerHorizontal="true"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:text="@string/sign_in"
        android:textSize="15sp"
        android:layout_marginTop="150dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite" />
    <Button
        android:id="@+id/teacherRegisterButton"
        android:layout_centerHorizontal="true"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:text="@string/register"
        android:textSize="15sp"
        android:layout_marginTop="205dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_question"
        android:layout_below="@id/teacherRegisterButton"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>
